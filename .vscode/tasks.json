{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "debug",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "label": "npm: debug",
            "detail": "npx cross-env BROWSER='chrome' BROWSER_ARGS='--remote-debugging-port=9222' react-scripts start",
            // "detail": "react-scripts start",
            "isBackground": true, // This prevents the launch.json to wait for the completion of the task
            "problemMatcher": {
                "owner": "custom", // This is not needed but, required by the problemMatcher Object
                "pattern": {
                    "regexp": "^$" // This is not needed but, required by the problemMatcher Object
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "Starting the development server...", // Signals the begin of the Task
                    "endsPattern": "Files successfully emitted*" // Signals that now the initialization of the task is complete
                }
            }
        },
        {
            "label": "Terminate All Tasks",
            "command": "echo ${input:terminate}",
            "type": "shell",
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "terminate",
            "type": "command",
            "command": "workbench.action.tasks.terminate",
            "args": "terminateAll"
        }
    ]
}
